source 'https://rubygems.org'

gem 'solrizer'
gem 'nokogiri'
gem 'rake'
gem 'rsolr'
gem 'trollop'
gem 'stanford-mods'
gem 'gdor-indexer'

# documentation
group :doc do
  gem 'rdoc'
end

group :development do
  gem 'pry-byebug'
end

group :deployment do
  gem "capistrano", '~> 3.2'
  gem 'capistrano-bundler'
  gem "lyberteam-capistrano-devel"
  gem 'rainbow' # for color output
end

group :test do
  gem 'rspec'
  gem 'rubocop'
  gem 'rubocop-rspec'
  gem 'yard'  # for javadoc-y documentation tags
end